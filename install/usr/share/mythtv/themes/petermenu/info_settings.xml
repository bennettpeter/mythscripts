        <action>CONFIGPLUGIN mythzoneminder</action>
        <depends>mythzoneminder</depends>
    </button>

    <button>
        <type>SETTINGS_WEATHER</type>
        <text>Weather Settings</text>
        <description>Weather locale and sources</description>
        <action>CONFIGPLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>

    <button>
      <type>SETTINGS_WEATHER</type>
      <text>Weather Station Settings</text>
      <action>CONFIGPLUGIN mythwstation</action>
