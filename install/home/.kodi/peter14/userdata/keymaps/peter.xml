<keymap>
  <global>
    <keyboard>
      <f4 mod="alt">ActivateWindow(shutdownmenu)</f4>
      <i mod="ctrl">Info</i>
      <t mod="ctrl">ActivateWindow(TVChannels)</t>
      <return mod="alt,meta">ContextMenu</return>
    </keyboard>
  </global>
  <FullscreenLiveTV>
    <keyboard>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChannelUp</up>
      <down>ChannelDown</down>
    </keyboard>
  </FullscreenLiveTV>
</keymap>